    "Subject": {
      "type": "string"
    },
    "Body": {
      "type": "richtext"
    },
    "EmailAccount": {
      "model": "email-account"
    },
    "SendImmediately": {
      "type": "boolean",
      "default": true
    },
    "Bcc": {
      "type": "string"
    }
  }
}

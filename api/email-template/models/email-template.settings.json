{
  "kind": "collectionType",
  "collectionName": "email_templates",
  "info": {
    "name": "Email Template",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "Name": {
      "type": "string",
      "required": true
